# Staging: Distroless with debug shell
FROM node:20-slim AS builder
WORKDIR /app

COPY package*.json ./
RUN npm install -g npm@latest && npm ci --only=production && npm cache clean --force
COPY . .

FROM gcr.io/distroless/nodejs20-debian12:debug-nonroot

COPY --from=builder /app /app
WORKDIR /app
EXPOSE 3000
CMD ["app.js"]
